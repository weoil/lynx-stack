{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build:debug": {
      "inputs": ["src/**/*.rs", "build.rs", "Cargo.toml"],
      "outputs": ["index.d.ts", "index.cjs", "*.node"]
    },
    "build:wasm": {
      "inputs": ["src/**/*.rs", "src/wasm.js", "build.rs", "Cargo.toml", "scripts/build_wasm.sh"],
      "outputs": ["dist/wasm.cjs"]
    },
    "build": {
      "dependsOn": [
        "build:debug",
        "build:wasm"
      ]
    }
  }
}
